<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:id="@+id/number_indcom"
            android:textSize="20dp"
            />
        <TextView
            android:layout_toRightOf="@+id/number_indcom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ind_title"
            android:text="title individual"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/res"
            android:layout_below="@+id/ind_title"
            android:layout_alignLeft="@+id/ind_title"
            android:textSize="15dp"
            android:text="resolved date:"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/resolveddate_ind"
            android:layout_toRightOf="@+id/res"
            android:text="02/07/2016"
            android:textSize="15dp"
            android:layout_alignTop="@+id/res"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/res" />

    </RelativeLayout>

</LinearLayout>
