<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.echo.complaintsystem.Item_Individual_CL">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1."
            android:id="@+id/Number_tv"
            android:layout_weight="0.03"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Fan is not working"
            android:id="@+id/Complaint_tv"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/Number_tv"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Created On : "
            android:id="@+id/textView2"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/Complaint_tv"
            android:layout_alignStart="@+id/Complaint_tv"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="26-03-2016"
            android:id="@+id/createdDate_tv"
            android:textSize="20dp"
            android:layout_alignTop="@+id/textView2"
            android:layout_toEndOf="@+id/textView2" />

    </RelativeLayout>
</FrameLayout>
